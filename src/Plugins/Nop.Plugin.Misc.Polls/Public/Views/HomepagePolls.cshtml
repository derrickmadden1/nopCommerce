@model IList<PollModel>

@if (Model.Count > 0)
{
    <link href="~/Plugins/Misc.Polls/Content/styles.css" rel="stylesheet">

    <section class="home-page-polls">
        <h2 class="title">
            @T("Plugins.Misc.Polls.Title")
        </h2>
        @foreach (var poll in Model)
        { 
            @await Html.PartialAsync("~/Plugins/Misc.Polls/Public/Views/_Poll.cshtml", poll)
        }
    </section>
}

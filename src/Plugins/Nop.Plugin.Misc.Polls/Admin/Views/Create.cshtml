@model PollModel

@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = T("Plugins.Misc.Polls.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Polls");
}

<form asp-controller="PollAdmin" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Misc.Polls.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Misc.Polls.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Misc.Polls/Admin/Views/_CreateOrUpdate.cshtml", Model)
</form>